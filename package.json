{
	"name": "twitter-bot-api",
	"version": "0.0.1",
	"description": "",
	"author": "",
	"private": true,
	"license": "UNLICENSED",
	"bin": {
		"twitter-bot-api": "bin/init-twitter-bot-api.js"
	},
	"scripts": {
		"prebuild": "rimraf cdk.out",
		"build": "nest build",
		"format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
		"start": "nest start",
		"start:dev": "nest start --watch",
		"start:debug": "nest start --debug --watch",
		"start:prod": "node dist/main",
		"lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:cov": "jest --coverage",
		"test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
		"test:e2e": "jest --config ./test/jest-e2e.json",
		"synth:staging": "npm run build && cdk synth --quiet"
	},
	"dependencies": {
		"@aws-sdk/client-dynamodb": "^3.588.0",
		"@aws-sdk/lib-dynamodb": "^3.588.0",
		"@nestjs/cache-manager": "^2.2.2",
		"@nestjs/common": "^10.3.8",
		"@nestjs/core": "^10.3.8",
		"@nestjs/mapped-types": "^2.0.5",
		"@nestjs/platform-express": "^10.3.8",
		"@vendia/serverless-express": "^4.12.6",
		"cache-manager": "^5.5.3",
		"class-transformer": "^0.5.1",
		"class-validator": "^0.14.1",
		"dotenv": "^16.4.5",
		"google-trends-api": "^4.9.2",
		"helmet": "^7.1.0",
		"morgan": "^1.10.0",
		"reflect-metadata": "^0.2.2",
		"rxjs": "^7.8.1",
		"twitter-api-v2": "^1.17.0",
		"uuid": "^9.0.1"
	},
	"devDependencies": {
		"@nestjs/cli": "^10.3.2",
		"@nestjs/schematics": "^10.1.1",
		"@nestjs/testing": "^10.3.8",
		"@types/aws-lambda": "^8.10.138",
		"@types/express": "^4.17.21",
		"@types/jest": "29.5.12",
		"@types/morgan": "^1.9.9",
		"@types/node": "20.13.0",
		"@types/supertest": "^6.0.2",
		"@typescript-eslint/eslint-plugin": "^7.11.0",
		"@typescript-eslint/parser": "^7.11.0",
		"aws-cdk-lib": "^2.144.0",
		"constructs": "^10.3.0",
		"eslint": "^8.57.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-prettier": "^5.1.3",
		"jest": "29.7.0",
		"prettier": "^3.3.0",
		"rimraf": "^5.0.7",
		"source-map-support": "^0.5.21",
		"supertest": "^7.0.0",
		"ts-jest": "29.1.4",
		"ts-loader": "^9.5.1",
		"ts-node": "^10.9.2",
		"tsconfig-paths": "4.2.0",
		"typescript": "^5.4.5",
		"webpack-merge": "^5.10.0"
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"json",
			"ts"
		],
		"rootDir": "src",
		"testRegex": ".*\\.spec\\.ts$",
		"transform": {
			"^.+\\.(t|j)s$": "ts-jest"
		},
		"collectCoverageFrom": [
			"**/*.(t|j)s"
		],
		"coverageDirectory": "../coverage",
		"testEnvironment": "node"
	}
}
